---
import Logo from "@/icons/Logo.astro";

const menuItems = [
  {
    name: "About",
    link: "#about",
  },
  {
    name: "Experience",
    link: "#experience",
  },
  {
    name: "Projects",
    link: "#projects",
  },
];
---

<header>
  <div class="container">
    <figure class="gradient-image">
      <Logo />
    </figure>
    <nav>
      <ul>
        {menuItems.map((item) => (
          <li>
            <a href={item.link}>{item.name}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  header {
    width: 100%;
    backdrop-filter: blur(10px);
    position: fixed;
    top: 0;
    z-index: 1000;
  }

  figure {
    color: var(--color-primary);
    width: 50px;
    height: 50px;
  }

  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 800px;
    margin: 0 auto;
    margin-top: 1em;
    padding: 0 1em;
  }

  nav ul {
    display: flex;
    list-style: none;
    gap: 1em;
  }

  nav ul li a {
    color: var(--color-light);
    padding: 1.2em 1em;
    text-decoration: none;
    display: block;
    transition: color 0.3s ease;
  }

  nav ul li a:hover {
    color: var(--color-primary);
    text-decoration: underline;
  }

  .menu-icon, .close-icon {
    display: none;
    height: 50px;
    width: 50px;
    margin-bottom: 2em;
    color: var(--color-primary);
    margin-top: 2em;
    margin-bottom: 4em;
    align-self: flex-end;
  }

  @media (max-width: 768px) {
    .container {
      flex-direction: column;

      nav ul {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0;
        text-align: center;
      }
    }
  }
</style>