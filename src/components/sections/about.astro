---
import Section from "../Section.astro";
import { basics } from "@cv";
import LinkedIn from "@/icons/LinkedIn.astro"
import GitHub from "@/icons/GitHub.astro"

type SocialIcon = Record<string, string | any>

const { name, occupation, image, summary, profiles } = basics;

const SOCIAL_ICONS: SocialIcon = {
  GitHub,
  LinkedIn,
}
---

<Section>
  <div class="card">
    <div>
      <h1>{name}</h1>
      <h2>{occupation}</h2>
      <p>{summary}</p>
    </div>
    <figure>
      <img src={image} alt={name} width="160" height="160" />
    </figure>
  </div>
  <div class="footer">
    <ul>
      {profiles.map(({ network, url }) => {
        const Icon = SOCIAL_ICONS[network]
        return (
          <li>
            <a
              href={url}
              target="_blank"
              rel="noopener noreferrer"
              aria-label={network}
              title={`${network} Profile`}
            >
              <Icon />
            </a>
          </li>
        )
      })}
    </ul>
    <button>Download CV</button>
  </div>
</Section>

<style>
  h1 {
    color: var(--color-primary);
    background-image: linear-gradient(to right, var(--color-primary), var(--color-secondary), var(--color-tertiary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  h2 {
    color: var(--color-accent);
  }

  h3 {
    color: var(--color-tertiary);
  }
  .card {
    display: flex;
    flex-direction: row;
    gap: 1em;
    align-items: center;
  }

  figure img {
    border-radius: 1em;
    border: 2px solid var(--color-gray);
  }

  ul li {
    display: inline-flex;
    margin-right: 1em;
    
    a {
      color: var(--color-light);
      height: 32px;
      width: 32px;
      transition: all 0.3s ease;

      &:hover {
        transform: scale(1.2);
      }
    }
  }

  p {
    color: var(--color-light);
    margin-top: 1em;
  }

  .footer {
    display: flex;
    flex-direction: row;
    gap: 1em;
    align-items: center;
    margin-top: .8em;
    ul {
      flex: 1;
    }
  }

  button {
    padding: .8em 2.8em;
    border: none;
    border-radius: 0.5em;
    color: var(--color-light);
    cursor: pointer;
    width: fit-content;
    margin: 0 auto;
    transition: all 0.3s ease;
    background-image: linear-gradient(45deg, var(--color-primary) 0%, var(--color-secondary) 70%);
    animation: shrink 5s infinite;
    &:hover {
      opacity: 0.8;
    }
  }
    @keyframes shrink {
    0% {
      background-size: 100% 100%;
    }
    50% {
      background-size: 200% 200%;
    }
    100% {
      background-size: 100% 100%;
    }
  }

  @media (width <= 768px) {
    .card {
      flex-direction: column-reverse;
    }
    figure img{
      width: 100px;
      height: 100px;
    }
    .footer {
      flex-direction: column;
    }
    h1, h2, h3, ul {
      text-align: center;
    }
  }
</style>